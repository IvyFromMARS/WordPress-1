if(function_exists('register_sidebar')){
  register_sidebar(array(
		'before_widget'=>'<div class="widget">',
		'after_widget'=>'</div>',
		'before_title'=>'<h2>',
		'after_title'=>'</h2>',
	));
}




if ( function_exists('register_sidebar') )
    register_sidebar(array('name' => 'Sidebar 1','before_widget' => '', 'after_widget' => '',));
    register_sidebar(array('name' => 'Sidebar 2','before_widget' => '<div id="%1$s" class="%2$s box">', 'after_widget' => '</div>',));
